<h1> <%= @post.title %> </h1>
<p><%= @post.body %></h1> <br>

<h3>Comments (<%= @post.comments.size %>)</h3>

<%= render partial: 'posts/comment', collection: @post.comments %>
<%= render partial: 'comments/form' %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Really delete the post?"}%> <br>
<%= link_to "<< Back to post list", posts_path %>
<p id="notice"><%= notice %></p>



 <div class="container">
  <div class="well">
        <div class="media-body">
         <h2> <%= @post.title %> </h2>
         <strong>By <%= @post.user.email %> </strong> <br>
         <p><%= @post.body %></h1> <br>
        </div>
        <%= link_to "Back to post list", posts_path %>
      </div>
     </div>

<div class="container">
  <div class="well">
    <div class="comments-container">
     <h3>Comments (<%= @post.comments.size %>)</h3>

     <%= render partial: 'posts/comment', collection: @post.comments %> <br>
     <% if user_signed_in? %>
      <%= render partial: 'comments/form' %>
     <% if current_user.id == @post.user_id %>
      <%= link_to "Edit", edit_post_path(@post) %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Really delete the post?"}%> <br>
     <% end %>
     <% else %>
      <p>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %>
      or <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %> to comment the post
      </p>
      <% end %>
      <br>
    </div>
  </div>
</div>

